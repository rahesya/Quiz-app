<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/done"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/closetoblack"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="470dp"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/donepic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorWhite"
        android:text="Press this button when you are done with the quiz. Pressing this button will automatically end the quiz,even if you haven't submitted all the questions.In Challenge mode you can make atmost 4 mistakes,once done the quiz will exit automatically. "/>
</LinearLayout>