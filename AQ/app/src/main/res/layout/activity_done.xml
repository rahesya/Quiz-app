<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    android:id="@+id/container"
    tools:context=".Done">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userpic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp"
        android:background="@drawable/profile_circular_border_imageview"
        android:elevation="50dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_android_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/congrats"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Congratulations"
        android:textColor="@color/colorBackground"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/days_one"
        android:text="Name"
        android:textColor="@color/colorBackground"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/total_ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/congrats"
        android:layout_marginBottom="181dp"
        android:fontFamily="@font/days_one"
        android:text="Total Questions"
        android:textColor="@color/colorBackground"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/correct_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/congrats"
        android:layout_below="@+id/total_ques"
        android:layout_marginTop="-182dp"
        android:fontFamily="@font/days_one"
        android:text="Correct answer"
        android:textColor="@color/colorBackground"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/congrats"
        android:layout_below="@+id/correct_ans"
        android:fontFamily="@font/days_one"
        android:text="Score"
        android:textColor="@color/colorBackground"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/player_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/congrats"
        android:layout_below="@+id/correct_ans"
        android:fontFamily="@font/days_one"
        android:text="0"
        android:textColor="@color/colorBackground"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/player_total_ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/congrats"
        android:layout_alignTop="@+id/total_ques"
        android:fontFamily="@font/days_one"
        android:text="0"
        android:textColor="@color/colorBackground"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/player_correct_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/congrats"
        android:layout_below="@+id/total_ques"
        android:layout_marginTop="-181dp"
        android:fontFamily="@font/days_one"
        android:text="0"
        android:textColor="@color/colorBackground"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnTryAgain"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/round"
        android:backgroundTint="@color/colorBackground"
        android:text="Try Again"
        android:textStyle="bold" />


</RelativeLayout>